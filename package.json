{
  "name": "kuma-mieru",
  "description": "A 3rd-party Uptime Kuma monitoring dashboard built on Next.js 15, TypeScript and Recharts.",
  "version": "1.4.1",
  "author": "Alice39s",
  "license": "MPL-2.0",
  "homepage": "https://github.com/Alice39s/kuma-mieru",
  "repository": {
    "type": "git",
    "url": "https://github.com/Alice39s/kuma-mieru.git"
  },
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun run generate && bun run lint:fix && next dev --turbopack --port 3881",
    "start": "bun run generate && bun ./scripts/init-start.ts && bun .next/standalone/server.js",
    "start:docker": "bun run generate && bun run scripts/docker-init.ts && bun ./server.js",
    "build": "bun run generate && next build",
    "build:analyze": "bun run generate && ANALYZE=true next build",
    "build:cloudflare": "CF_DEPLOYMENT=true bun run generate && opennextjs-cloudflare build",
    "deploy:cloudflare": "CF_DEPLOYMENT=true opennextjs-cloudflare deploy",
    "lint": "biome check .",
    "lint:fix": "biome check --write . && biome format --write .",
    "format": "biome format .",
    "generate": "bun scripts/generate-config.ts && bun scripts/generate-image-domains.ts && bun scripts/banner.ts",
    "generate:config": "bun scripts/generate-config.ts",
    "generate:domains": "bun scripts/generate-image-domains.ts",
    "generate:banner": "bun scripts/banner.ts"
  },
  "dependencies": {
    "@heroui/react": "^2.8.2",
    "@heroui/theme": "^2.4.20",
    "@mdx-js/mdx": "^3.1.0",
    "@mdx-js/react": "^3.1.0",
    "@next/bundle-analyzer": "^15.4.7",
    "@opennextjs/cloudflare": "^1.6.5",
    "@react-aria/ssr": "3.9.7",
    "@react-aria/visually-hidden": "3.8.20",
    "@tailwindcss/postcss": "^4.1.12",
    "@types/markdown-it": "^14.1.2",
    "@types/sanitize-html": "^2.16.0",
    "chalk": "^5.6.0",
    "cheerio": "^1.1.2",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "dayjs": "^1.11.13",
    "framer-motion": "^12.23.12",
    "intl-messageformat": "^10.7.16",
    "json5": "^2.2.3",
    "lucide-react": "^0.483.0",
    "markdown-it": "^14.1.0",
    "next": "^15.4.7",
    "next-intl": "^4.3.4",
    "next-themes": "^0.4.6",
    "react": "^19.1.1",
    "react-dom": "^19.1.1",
    "recharts": "^2.15.4",
    "sanitize-html": "^2.17.0",
    "sonner": "^2.0.7",
    "swr": "^2.3.6",
    "tailwind-merge": "^3.3.1",
    "tm-themes": "^1.10.7",
    "usehooks-ts": "^3.1.1",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "@next/eslint-plugin-next": "15.3.0",
    "@react-types/shared": "3.28.0",
    "@tailwindcss/typography": "^0.5.16",
    "@types/node": "22.13.14",
    "@types/react": "^19.1.10",
    "@types/react-dom": "^19.1.7",
    "@typescript-eslint/eslint-plugin": "8.30.1",
    "@typescript-eslint/parser": "8.29.1",
    "dotenv": "^16.6.1",
    "postcss": "8.5.3",
    "prettier": "3.5.3",
    "shiki": "^3.10.0",
    "tailwind-variants": "1.0.0",
    "tailwindcss": "^4.1.12",
    "typescript": "^5.9.2",
    "wrangler": "^4.31.0"
  },
  "trustedDependencies": [
    "@biomejs/biome",
    "@heroui/shared-utils",
    "esbuild",
    "sharp",
    "workerd"
  ]
}
